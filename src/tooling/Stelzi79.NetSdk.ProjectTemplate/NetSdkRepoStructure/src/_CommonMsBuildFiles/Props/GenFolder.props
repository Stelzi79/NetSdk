<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<!-- Persist the source generator (and other) files to disk -->
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<!-- ğŸ‘‡ The "base" path for the source generators -->
		<GeneratedFolder>Generated</GeneratedFolder>
		<!-- ğŸ‘‡ Write the output for each target framework to a different sub-folder -->
		<CompilerGeneratedFilesOutputPath>$(GeneratedFolder)\$(TargetFramework)</CompilerGeneratedFilesOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<!-- ğŸ‘‡ Exclude everything in the base folder -->
		<Compile Remove="$(GeneratedFolder)/**/*.cs"/>
	</ItemGroup>

</Project>